<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_doctors"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.logeswarishanmugavel.medunsaid.ViewDoctors">

    <TextView
        android:text="My Providers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textStyle="bold"
        android:textSize="26sp"
        android:textColor="@color/pagetitle"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="60dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:text="Primary Care Doctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/doc1"
                android:textSize="18dp"
                android:layout_weight="0.30"
                android:textColor="@color/label"
                android:padding="10dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.70"
                android:textColor="#ffffff"
                android:background="@color/colorPrimary"
                android:text= "View"
                android:layout_gravity="center"
                android:id="@+id/viewpcDr"
                android:onClick="pcDr"
                android:padding="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:text="Pharmacist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/med1"
                android:textSize="18dp"
                android:layout_weight="0.30"
                android:textColor="@color/label"
                android:padding="10dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.70"
                android:textColor="#ffffff"
                android:background="@color/colorPrimary"
                android:text= "View"
                android:layout_gravity="center"
                android:id="@+id/viewspDr"
                android:onClick="pharm"
                android:padding="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addDoc"
                android:padding="10dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="#ffffff"
                android:background="@color/colorPrimary"
                android:onClick="addDoc"
                android:text="Add New Provider" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
